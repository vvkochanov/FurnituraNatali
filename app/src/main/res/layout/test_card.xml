<?xml version="1.0" encoding="utf-8"?>
    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="174dp"
        android:layout_height="174dp"
        android:id="@+id/test_card"
        android:layout_gravity="center"
        android:layout_margin="1dp"
    >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/imageViewForCard"
            android:src="@drawable/category_1"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:clickable="false" />

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="68dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@color/colorPrimary"
        android:alpha="0.5"
        android:onClick="sendFrmMsg"
        android:layout_gravity="center_horizontal|bottom">

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/str_card_text"
                android:id="@+id/textViewOfCard"
                android:layout_gravity="left|center_vertical"
                android:textSize="16sp"
            android:textColor="@color/colorDefWhite"
            android:layout_marginLeft="16dp" />
    </FrameLayout>

</FrameLayout>