<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/categ_card"
    android:layout_width="174dp"
    android:layout_height="208dp"
    android:layout_gravity="center"
    android:background="@color/colorDefWhite"
    app:cardElevation="0dp"
    app:cardCornerRadius="0dp"
    android:layout_margin="2dp"
    android:onClick="sendCardMsg"
    android:padding="0dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/imageViewForCard"
            android:src="@drawable/no_image"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:clickable="false" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="68dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:background="@color/colorPrimary"
            android:alpha="0.5"
            android:onClick="sendFrmMsg">

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/str_card_text"
                    android:id="@+id/textViewOfCard"
                    android:layout_gravity="left|center_vertical"
                    android:textSize="16sp"
                android:textColor="@color/colorDefWhite"
                android:layout_marginLeft="16dp" />
        </FrameLayout>

    </RelativeLayout>

</android.support.v7.widget.CardView>